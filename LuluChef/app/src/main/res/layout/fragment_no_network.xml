<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lulu"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:backgroundTint="@color/white">

    <!-- Pop-up Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:elevation="6dp">

        <!-- Title -->
        <TextView
            android:id="@+id/popupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="8dp"
            android:text="@string/nonetwork"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <!-- Description -->
        <TextView
            android:id="@+id/popupDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:text="@string/nonetmsg"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Horizontal Button Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Cancel Button -->
            <Button
                android:id="@+id/gocalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@color/lulu"
                android:padding="10dp"
                android:text="Go to Calendar"
                android:textColor="@color/black"
                android:textColorLink="@color/lulu" />

            <!-- Settings Button -->
            <Button
                android:id="@+id/goFavButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lulu"
                android:padding="10dp"
                android:text="Go to Favourite"
                android:textColor="@color/black"
                android:textColorLink="@color/lulu" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
